#include <bits/stdc++.h>
using namespace std;

typedef long long ll;
const ll nmax=10e5+5;
ll dp[1005][1005]={};
ll n,m;
char a[1005][1005];
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
 //    freopen("TEST.INP","r",stdin);
//    freopen("TEST.OUT","w",stdout);
    cin>>n>>m;
    for(int i=1;i<=n;i++)
       for(int j=1;j<=m;j++)cin>>a[i][j];

     dp[1][1]=1;
	  for(int i=1;i<=n;i++)
	    for(int j=1;j<=m;j++)
	    {
	    	if(a[i][j]=='#')dp[i][j]=0;
	    	else {
			if(j>1)dp[i][j]+=dp[i][j-1];
	    	 if(i>1)dp[i][j]+=dp[i-1][j];
	    	 dp[i][j] %=1000000007;
		        }
		}

cout<<dp[n][m];
	   return 0;   
 }
