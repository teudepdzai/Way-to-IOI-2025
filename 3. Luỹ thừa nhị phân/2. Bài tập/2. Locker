#include <iostream>

using namespace std;
typedef long long ll;
int const nmax=2000005;
int const mod=(int) 1e9 + 7;
long long t,n,a,b;

long long mu(ll x, ll n)
{
	if(n==0)return 1;
	if(n==1)return x;
	long long tmp=mu(x, n/2);
	tmp%=mod;
	if(n%2==0)return (tmp*tmp)%mod;
	else return ((tmp*tmp)%mod*x%mod)%mod;
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    cin>>t;
    while(t--)
    {
    	cin>>n;
    	if(n<3)cout<<n<<"\n";
    	else if(n%3==0)cout<<mu(3,n/3)<<"\n";
    	else if(n%3==1)cout<<(mu(3,(n-4)/3)*4)%mod<<"\n";
    	else if(n%3==2)cout<<(mu(3,(n-2)/3)*2)%mod<<"\n";
 	}
	return 0;
}
//https://www.spoj.com/problems/LOCKER/
